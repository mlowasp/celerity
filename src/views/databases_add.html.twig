{% extends 'base.html.twig' %}
  {% block body %}
    <div class="container top-margin">
      <div class="page-header" id="banner">
        <div class="row">
          <div class="col-lg-12">
            <div class="card border-dark mb-3">
                <div class="card-header">Add database</div>
                <div class="card-body">
                  <div class="mb-3">
                    <label class="form-label">Name</label>
                    <input type="text" id="databases_add_input_name" class="form-control" placeholder="Name">
                  </div>
                  
                  <div class="mb-3">
                    <label class="form-label">Hostname</label>
                    <input type="text" id="databases_add_input_hostname" class="form-control" placeholder="Hostname">
                  </div>
                  
                  <div class="mb-3">
                    <label class="form-label">Port</label>
                    <input type="text" id="databases_add_input_port" class="form-control" placeholder="Port" value="3306">
                  </div>
                  
                  <div class="mb-3">
                    <label class="form-label">Username</label>
                    <input type="text" id="databases_add_input_username" class="form-control" placeholder="Username">
                  </div>
                  
                  <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input type="password" id="databases_add_input_password" class="form-control" placeholder="Password">
                  </div>

                  <div class="mb-3">
                    <label class="form-label">Database</label>
                    <input type="text" id="databases_add_input_database" class="form-control" placeholder="Database">
                  </div>

                  <button type="button" class="btn btn-success" id="databases_add_save_btn">Save</button>
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  {% endblock %}